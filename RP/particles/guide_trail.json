{
  "format_version": "1.10.0",
  "particle_effect": {
    "description": {
      "identifier": "dap:guide_trail_particle",
      "basic_render_parameters": {
        "material": "particles_alpha",
        "texture": "textures/particle/magic_trail"
      }
    },
    "components": {
        "minecraft:emitter_initialization": {
            "creation_expression": "v.dist = math.sqrt(math.pow(v.end.x, 2) + math.pow(v.end.y, 2) + math.pow(v.end.z, 2));v.speed = 8.0;v.calculated_lifetime = (v.dist + 0.01) / v.speed;"
        },
        "minecraft:emitter_rate_steady": {
            "spawn_rate": 15,
            "max_particles": 35
        },
        "minecraft:emitter_lifetime_once": {
            "active_time": 1.0
        },
        "minecraft:emitter_shape_point": {},
        "minecraft:particle_lifetime_expression": {
            "max_lifetime": "v.calculated_lifetime"
        },
        "minecraft:particle_appearance_billboard": {
            "size": [0.25, 0.25],
            "facing_camera_mode": "rotate_xyz",
            "uv": {
                "texture_width": 16,
                "texture_height": 128,
                "flipbook": {
                    "base_UV": ["Math.floor(v.particle_random_3 * 2) * 8", "Math.floor(v.particle_random_4 * 2) * 8"],
                    "size_UV": [8, 8],
                    "step_UV": [0, 16],
                    "frames_per_second": 12,
                    "max_frame": 8,
                    "stretch_to_lifetime": true
                }
            }
        },
        "minecraft:particle_motion_parametric": {
            "relative_position": [
                "Math.lerp(v.start.x, v.end.x, v.particle_age / v.particle_lifetime)",
                "Math.lerp(v.start.y, v.end.y, v.particle_age / v.particle_lifetime) + (4 * v.arc_height * (v.particle_age / v.particle_lifetime) * (1 - (v.particle_age / v.particle_lifetime)))",
                "Math.lerp(v.start.z, v.end.z, v.particle_age / v.particle_lifetime)"
            ]
        }
    }
  }
}